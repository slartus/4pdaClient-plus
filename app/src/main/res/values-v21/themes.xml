<resources>
    <style name="Theme.White" parent="MainThemeWH">
        <item name="colorPrimary">@color/actionbar_background_wh</item>
        <item name="android:statusBarColor">#2d000000</item>
        <item name="md_content_color">#FF757575</item>
        <item name="md_title_color">#FF212121</item>
        <item name="md_item_color">#FF212121</item>
    </style>

    <style name="Theme.Black" parent="MainThemeBL">
        <item name="colorPrimary">@color/actionbar_background_bl</item>
        <item name="android:statusBarColor">#2d000000</item>
    </style>

    <style name="MainPinkWH" parent="Theme.White">
        <item name="android:alertDialogTheme">@style/Theme.AlertDialogPink</item>
        <item name="colorAccent">@color/accentPink</item>
        <item name="arrow_up">@drawable/arrowup</item>
        <item name="arrow_down">@drawable/arrowdown</item>
    </style>
    <style name="MainBlueWH" parent="Theme.White">
        <item name="android:alertDialogTheme">@style/Theme.AlertDialogBlue</item>
        <item name="colorAccent">@color/accentBlue</item>
        <item name="arrow_up">@drawable/arrowup_blue</item>
        <item name="arrow_down">@drawable/arrowdown_blue</item>
    </style>

    <style name="MainPinkBL" parent="Theme.Black">
        <item name="android:alertDialogTheme">@style/Theme.AlertDialogPinkDark</item>
        <item name="colorAccent">@color/accentPink</item>
        <item name="arrow_up">@drawable/arrowup</item>
        <item name="arrow_down">@drawable/arrowdown</item>
    </style>
    <style name="MainBlueBL" parent="Theme.Black">
        <item name="android:alertDialogTheme">@style/Theme.AlertDialogBlueDark</item>
        <item name="colorAccent">@color/accentBlue</item>
        <item name="arrow_up">@drawable/arrowup_blue</item>
        <item name="arrow_down">@drawable/arrowdown_blue</item>
    </style>

    <style name="MainGrayWH" parent="Theme.White">
        <item name="android:alertDialogTheme">@style/Theme.AlertDialogGray</item>
        <item name="colorAccent">@color/accentGray</item>
        <item name="arrow_up">@drawable/arrowup_gray</item>
        <item name="arrow_down">@drawable/arrowdown_gray</item>
    </style>
    <style name="MainGrayBL" parent="Theme.Black">
        <item name="android:alertDialogTheme">@style/Theme.AlertDialogGrayDark</item>
        <item name="colorAccent">@color/accentGray</item>
        <item name="arrow_up">@drawable/arrowup_gray</item>
        <item name="arrow_down">@drawable/arrowdown_gray</item>
    </style>

    <style name="Theme.Transluent.WhitePink" parent="MainPinkWH">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Theme.Transluent.WhiteBlue" parent="MainBlueWH">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Theme.Transluent.BlackPink" parent="MainPinkBL">
        <item name="android:fitsSystemWindows">false</item>
    </style>
    <style name="Theme.Transluent.BlackBlue" parent="MainBlueBL">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Theme.Transluent.WhiteGray" parent="MainGrayWH">
        <item name="android:fitsSystemWindows">false</item>
    </style>
    <style name="Theme.Transluent.BlackGray" parent="MainGrayBL">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Theme.Prefs.WhitePink" parent="MainPinkWH">
        <item name="android:statusBarColor">@color/statusBarPrefs_wh</item>
        <item name="android:textColor">@color/list_text_special_color_wh</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleSize">56dp</item>
        <item name="android:windowTitleStyle">@style/prefs_title_style</item>
        <item name="android:windowTitleBackgroundStyle">@style/prefs_title_background_wh</item>
    </style>

    <style name="Theme.Prefs.BlackPink" parent="MainPinkBL">
        <item name="android:statusBarColor">@color/statusBarPrefs_bl</item>
        <item name="android:textColor">@color/list_text_special_color_bl</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleSize">56dp</item>
        <item name="android:windowTitleStyle">@style/prefs_title_style</item>
        <item name="android:windowTitleBackgroundStyle">@style/prefs_title_background_bl</item>
    </style>

    <style name="Theme.Prefs.WhiteBlue" parent="MainBlueWH">
        <item name="android:statusBarColor">@color/statusBarPrefs_wh</item>
        <item name="android:textColor">@color/list_text_special_color_wh</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleSize">56dp</item>
        <item name="android:windowTitleStyle">@style/prefs_title_style</item>
        <item name="android:windowTitleBackgroundStyle">@style/prefs_title_background_wh</item>
    </style>

    <style name="Theme.Prefs.BlackBlue" parent="MainBlueBL">
        <item name="android:statusBarColor">@color/statusBarPrefs_bl</item>
        <item name="android:textColor">@color/list_text_special_color_bl</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleSize">56dp</item>
        <item name="android:windowTitleStyle">@style/prefs_title_style</item>
        <item name="android:windowTitleBackgroundStyle">@style/prefs_title_background_bl</item>
    </style>

    <style name="Theme.Prefs.WhiteGray" parent="MainGrayWH">
        <item name="android:statusBarColor">@color/statusBarPrefs_wh</item>
        <item name="android:textColor">@color/list_text_special_color_wh</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleSize">80dp</item>
        <item name="android:windowTitleStyle">@style/prefs_title_style_kitkat</item>
        <item name="android:windowTitleBackgroundStyle">@style/prefs_title_background_wh</item>
    </style>

    <style name="Theme.Prefs.BlackGray" parent="MainGrayBL">
        <item name="android:statusBarColor">@color/statusBarPrefs_bl</item>
        <item name="android:textColor">@color/list_text_special_color_bl</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleSize">80dp</item>
        <item name="android:windowTitleStyle">@style/prefs_title_style_kitkat</item>
        <item name="android:windowTitleBackgroundStyle">@style/prefs_title_background_bl</item>
    </style>

    <style name="Theme.AlertDialogPink" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accentPink</item>
    </style>
    <style name="Theme.AlertDialogPinkDark" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/accentPink</item>
    </style>
    <style name="Theme.AlertDialogBlue" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accentBlue</item>
    </style>
    <style name="Theme.AlertDialogBlueDark" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/accentBlue</item>
    </style>
    <style name="Theme.AlertDialogGray" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accentGray</item>
    </style>
    <style name="Theme.AlertDialogGrayDark" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/accentGray</item>
    </style>
</resources>