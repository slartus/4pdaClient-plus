<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/image_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/pinned"
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/pin"
            android:layout_gravity="right"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp" />

        <LinearLayout
            android:id="@+id/imgFlag"
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:contentDescription="flag"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/txtMain"
                style="?list_text_special_color"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="22dp"
                android:paddingRight="20dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="16sp"
                android:singleLine="false"
                tools:text="Main Text Most looonges" />

            <TextView
                android:id="@+id/txtSubMain"
                style="?list_text_second_color"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:maxLines="2"
                android:textAppearance="?android:textAppearanceSmall"
                tools:text="Sub main textySub main textySub main textySub main textySub main texty"
                />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTopLeft"
                    style="?list_text_second_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    tools:text="Top Left Text"
                    />

                <TextView
                    android:id="@+id/txtTopRight"
                    style="?list_text_second_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:lines="1"
                    android:textAppearance="?android:textAppearanceSmall"
                    tools:text="Top Right Text" />
            </RelativeLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4c000000"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="true"
            android:indeterminateOnly="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="invisible" />
    </FrameLayout>
</RelativeLayout>