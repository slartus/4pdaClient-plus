<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <FrameLayout
            android:id="@+id/ab_cont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         The drawer is given a fixed width in dp and extends the full height of
         the container. A solid background is used for contrast
         with the content view. -->
    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        style="?drawer_menu"
        >
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="168dp"
            android:id="@+id/topInform"
            android:clickable="true"
            android:background="?actbar"
            >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/user_bacground"
                android:id="@+id/userBackground"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#33000000"/>
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@drawable/ic_menu_refresh"
                android:layout_alignTop="@+id/imgAvatara"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:id="@+id/infoRefresh"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatara"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="40dp"
                app:border_width="0dp"
                app:border_color="@android:color/transparent"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:id="@+id/textWrapper"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/userNick"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:id="@+id/userRep"
                    android:layout_toRightOf="@+id/userNick"
                    android:paddingLeft="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/qmsMessages"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/userNick"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="56dp"
                    android:id="@+id/loginButton"
                    android:text="Войти"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </RelativeLayout>

        <ExpandableListView
            android:id="@+id/left_drawer_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:childDivider="#00000000"
            android:choiceMode="singleChoice"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:groupIndicator="@android:color/transparent"
            android:layout_below="@+id/topInform"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>



</android.support.v4.widget.DrawerLayout>